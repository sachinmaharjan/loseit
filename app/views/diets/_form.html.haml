= form_for(@diet) do |f|
  - if @diet.errors.any?
    #error_explanation
      %h2
        = pluralize(@diet.errors.count, "error")
        prohibited this diet from being saved:
      %ul
        - @diet.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label :items
    = f.text_field :items
  .field
    = f.label :food_consumed
    = f.text_field :food_consumed
  .field
    = f.label :serving
    %br/
    = f.text_field :serving
  .field
    = f.label :calories
    = f.text_field :calories
  .field
    = f.label :sodium
    = f.text_field :sodium
  .field
    = f.label :total_fruit_serving
    = f.text_field :total_fruit_serving
  .field
    = f.label :total_vegetable_serving
    = f.text_field :total_vegetable_serving
  .field
    = f.label :water
    = f.text_field :water
  .actions
    = f.submit